<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="120dp">

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:id="@+id/title_country"
            tools:layout_editor_absoluteX="16dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/title_city"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:id="@+id/title_city"
            tools:layout_editor_absoluteX="16dp"
            app:layout_constraintTop_toBottomOf="@+id/title_country"
            app:layout_constraintBottom_toTopOf="@+id/title_date"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/title_date"
            tools:layout_editor_absoluteX="16dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/title_city"
    />
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/items_amount"
            tools:layout_editor_absoluteY="93dp" tools:layout_editor_absoluteX="336dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/checkbox_off_background"
            android:id="@+id/imageView"
            tools:layout_editor_absoluteY="8dp" tools:layout_editor_absoluteX="376dp"/>
</android.support.constraint.ConstraintLayout>