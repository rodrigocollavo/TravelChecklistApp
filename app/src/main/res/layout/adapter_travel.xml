<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="120dp">

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title_country"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/title_city" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/title_city"
            app:layout_constraintTop_toBottomOf="@+id/title_country"
            app:layout_constraintBottom_toTopOf="@+id/title_date" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/title_date"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/title_city"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="20dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/items_amount"
            app:layout_constraintRight_toRightOf="parent" app:layout_constraintBottom_toBottomOf="@+id/title_date"
            android:layout_marginRight="20dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/checkbox_off_background"
            android:id="@+id/imageView"
            app:layout_constraintRight_toRightOf="parent" app:layout_constraintTop_toTopOf="@+id/title_country"
            android:layout_marginRight="20dp"/>
</android.support.constraint.ConstraintLayout>